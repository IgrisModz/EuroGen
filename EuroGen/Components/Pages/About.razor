@page "/about"

@inject LocalizationService Localizer

<PageTitle>@Localizer["About"]</PageTitle>

<MudPaper Class="pa-4 rounded-xl" Elevation="24">
    <MudText Typo="Typo.h4" Class="mb-4">@Localizer["AboutTheApp"]</MudText>
    
    <MudText Typo="Typo.body1">
        @Localizer["AppDescription"]
    </MudText>
    <MudDivider Class="my-4" />
    <MudText Typo="Typo.h6">@Localizer["MainFeatures"]</MudText>
    <MudList T="string" Dense="true" ReadOnly="true">
        <MudListItem>@Localizer["GenerationByProbabilities"]</MudListItem>
        <MudListItem>@Localizer["DetailedAnalysis"]</MudListItem>
        <MudListItem>@Localizer["FilterAnalysis"]</MudListItem>
        <MudListItem>@Localizer["TimeRestrict"]</MudListItem>
        <MudListItem>@Localizer["SimultaneousDraws"]</MudListItem>
    </MudList>
    <MudDivider Class="my-4" />
    <MudText Typo="Typo.h6">@Localizer["DataSource"]</MudText>
    <MudText Typo="Typo.body2">
        @Localizer["DataSourceDetails"]
    </MudText>
    <MudDivider Class="my-4" />
    <MudText Typo="Typo.h6">@Localizer["AvailableLanguages"]</MudText>
    <MudText Typo="Typo.body2">
        @Localizer["AvailableLanguagesDetails"]
    </MudText>
    <MudDivider Class="my-4" />
    <MudText Typo="Typo.h6">@Localizer["CreditsAndLegalNotices"]</MudText>
    <MudText Typo="Typo.body2">
        @Localizer["Credits"] <b>IgrisModz</b>.<br />
        @Localizer["Thanks"] <b>Al-Trui-Ste</b> @Localizer["AppIdea"]<br />
        @Localizer["LegalNotices"]<br />
        @Localizer["Questions"]
        <MudButton Href="https://github.com/IgrisModz/EuroGen/issues"
                   Target="_blank"
                   EndIcon="@Icons.Custom.Brands.GitHub"
                   Color="Color.Primary"
                   Variant="Variant.Text">@Localizer["GithubLink"]</MudButton>
    </MudText>
    <MudDivider Class="my-4" />
    <MudText Typo="Typo.body2" Align="Align.Center">
        @Localizer["AppVersion"] : 1.0.0
    </MudText>
</MudPaper>
